# ===========================================
# CONFIGURAÇÃO DE PRODUÇÃO - PM AI MVP
# ===========================================

# Environment
ENVIRONMENT=production
DEBUG=false

# Database Configuration
POSTGRES_USER=pmapp_prod
POSTGRES_PASSWORD=CHANGE_THIS_SECURE_PASSWORD_IN_PRODUCTION
POSTGRES_DB=pmdb_prod
POSTGRES_HOST=db
POSTGRES_PORT=5432

# Backend Configuration
SECRET_KEY=CHANGE_THIS_SECRET_KEY_IN_PRODUCTION_USE_STRONG_RANDOM_KEY
ACCESS_TOKEN_EXPIRE_MINUTES=60
ALGORITHM=HS256

# CORS Configuration
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# API Configuration
API_V1_STR=/api/v1
PROJECT_NAME=PM AI MVP API
VERSION=1.0.0

# Performance Configuration
MAX_PAGE_SIZE=100
DEFAULT_PAGE_SIZE=20

# Logging Configuration
LOG_LEVEL=WARNING

# Frontend Configuration
VITE_API_URL=https://yourdomain.com/api/v1

# Redis Configuration
REDIS_URL=redis://redis:6379/0
REDIS_PASSWORD=CHANGE_THIS_REDIS_PASSWORD_IN_PRODUCTION

# SSL/TLS Configuration
SSL_CERT_PATH=/etc/ssl/certs/ssl-cert.pem
SSL_KEY_PATH=/etc/ssl/private/ssl-cert.key

# Monitoring Configuration
SENTRY_DSN=your-sentry-dsn-here
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090

# Security Configuration
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com
SECURE_SSL_REDIRECT=true
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=true
SECURE_HSTS_PRELOAD=true
